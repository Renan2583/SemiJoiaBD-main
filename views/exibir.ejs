<!-- views/cadastro.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <script src="/js/cadastrar.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <h1 style="text-align: center;">Pecas Cadastradas</h1>
  <table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Fornecedor</th>
            <th>Preço Pago</th>
            <th>Preço De Venda</th>
            <th>Quantidade</th>
            <th>Vendedor</th>
        </tr>
    </thead>

    <tbody>
        
            <% for(let i=0;i<lista.length;i++) { %>
                <tr class="<%= i % 2 === 0 ? 'table-primary' : '' %> ">
                    <td><%=lista[i].id %></td>
                    <td><%= lista[i].nome %></td>
                    <td><%= lista[i].fornecedor %></td>
                    <td>R$ <%= lista[i].precocompra %></td>
                    <td>R$ <%= lista[i].precovenda %></td>
                    <td><%= lista[i].quant %></td>
                    <td><%= lista[i].vendedor %></td>
                </tr>
                
           <% } %>
        
    </tbody>
</table>
</body>
</html>
